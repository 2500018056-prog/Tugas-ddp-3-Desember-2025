#include <iostream>
using namespace std;


int nilai(int a, int b) {
    if (b == 0)
        return 1;
    return a * nilai(a, b - 1);
}

int main() {
    int a, b;

    cout << "== Pangkat ==" << endl;
    cout << "Masukkan angka dasar: ";
    cin >> a;
    cout << "Masukkan pangkat    : ";
    cin >> b;

    int hasil = nilai(a, b);

    cout << "Hasil dari " << a << "^" << b << " adalah: " << hasil << endl;

    return 0;
}
